<div class="row">
    <div class="container">
        <div class="col-md-10">
            <table class="table table-bordered text-center text-white">
                <thead class="bg-dark">
                    <tr>
                        <th>Id</th>
                        <th>Publisher</th>
                        <th>Post</th>
                        <th>Approve Comments</th>
                        <th>Date</th>
                        <th>Body</th>
                    </tr>
                    
                </thead>
                <tbody class="text-dark">
                    {{#each comments}}
                    <tr>
                        <td>{{_id}}</td>
                        <td style="width: auto;">{{user.firstName}} {{user.lastName}}</td>
                        <td>{{post.title}}</td>
                        <td></td>
                        <td>{{date}}</td>
                        <td>{{body}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>