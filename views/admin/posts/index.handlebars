<div class="container">
    <h1>All Posts</h1>

    <table class="table table-bordered">
        <thead>
            <tr class="bg-dark text-center text-white">
                <th>Title</th>
                <th>Description</th>
                <th>Allow Comments</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="text-center">
            {{#each posts}}
            <tr>
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>{{status}}</td>
                <td>{{category.title}}</td>
                <td>
                    <a href="/admin/posts/edit/{{_id}}" class="btn btn-small btn-warning">Edit</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>